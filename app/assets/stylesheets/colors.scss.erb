// Color definitions
$main-color: <%= Settings.css.main_color %>;
$main-color-hover: <%= Settings.css.hover_color %>;
$highlight-color: <%= Settings.css.highlight_color %>;

$fsek-orange: #eb7125;
$fsek-orange-hover: #eb7125;
$fsek-nano-green: #4e9d2d;
$fsek-pi-silver: #bebebe;

$black: #000;
$white: #fff;
$gray-text: #777;
$gray-headline: #555;
$light-gray-text: #eee;
$dark-gray: #585f69;
$link-hover-color: #f82805;
$light-gray: #fcfcfc;
$footer-gray: #333;

$highlight: 0 1px 0 $white;
