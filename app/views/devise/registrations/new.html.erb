<div class="col-12 col-md-6 offset-md-3">
  <div class="headline">
    <h1><%= t('devise.sign_up') %></h1>
  </div>
  <%= simple_form_for(resource, as: resource_name,
                      url: registration_path(resource_name)) do |f| %>
    <%= f.input :firstname, hint: t('.name_visibility') %>
    <%= f.input :lastname, hint: t('.name_visibility') %>
    <% hint = simple_format(t('.email_visibility') + t('model.user.email_format')) %>
    <%= f.input :email, required: true, hint: hint %>
    <%= f.input :password, required: true, hint: t('.password_visibility') %>
    <%= f.input :password_confirmation, required: true %>

    <span class="d-block mb-2">
      <%= t('.agree_to_terms' ) %>
      <%= link_to(t('.terms'), terms_path, target: :blank_p) %>.
      <%= t('.read_terms') %>
    </span>

    <%= f.button :submit, id: 'user-submit' %>
    <hr>

    <%= render 'devise/shared/links' %>
  <% end %>
</div>
