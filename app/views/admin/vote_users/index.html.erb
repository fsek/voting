<div class="headline">
  <h1><%= t('.title') %></h1>
</div>

<div class="col-md-12">
  <%= link_to t('.attendance_list'), admin_attendance_list_path,
              class: 'btn primary' %>
  <%= link_to t('.quick_adjustments'), admin_adjustments_path,
              class: 'btn primary' %>
  <% if can? :manage, Vote %>
    <%= link_to t('.manage_vote'), admin_votes_path, class: 'btn secondary' %>
  <% end %>
  <% if can? :manage, Agenda %>
    <%= link_to t('.manage_agenda'), admin_agendas_path, class: 'btn secondary' %>
  <% end %>
  <%= link_to(t('.make_all_not_present'), all_not_present_admin_vote_users_path,
              method: :patch, class: 'btn secondary',
              data: {confirm: t('.confirm_all_not_present')}) %>
  <hr>
</div>

<div class="col-md-12 vote status" id="vote-status" data-position="vote-user-index">
  <%= render '/admin/votes/status', vote_status_view: @vote_status_view %>
</div>

<div class="col-md-12">
  <%= paginate(@vote_users) %>
  <table class="table table-striped table-bordered admin-grid">
    <thead>
      <tr>
        <th><%= User.human_attribute_name(:name) %></th>
        <th><%= User.human_attribute_name(:presence) %></th>
        <th><%= t('.change_state') %></th>
        <th><%= t('.reset_votecode') %></th>
      </tr>
      <tbody>
        <% @vote_users.each do |user| %>
          <tr id="<%= dom_id(user) %>" class="<%= user.presence ? 'highlight' : 'no-highlight' %>">
            <td> <%= link_to admin_print_user(user), admin_vote_user_path(user) %></td>
            <td> <%= yes_no(user.presence) %></td>
            <td class="adjust"> <%= vote_user_state_link(user) %></td>
            <td class="votecode-reset">
              <%= link_to(t('.reset'),
                          new_votecode_admin_vote_user_path(user),
                          method: :patch, remote: true,
                          data: { confirm: t('.confirm_reset') }) %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </thead>
  </table>
  <%= paginate(@vote_users) %>
  <hr>
  <%= render '/admin/adjustments/info' %>
</div>
