<div class="col-12">
  <div class="headline">
    <h1><%= t('.title_for', item: @item) %></h1>
  </div>
</div>

<div class="col-12 col-md-2">
  <%= link_to(t('.edit_item'), edit_admin_item_path(@item), class: 'btn secondary') %>
  <%= link_to(t('.destroy'), admin_item_sub_item_path(@item, @sub_item), method: :delete,
                                                      class: 'btn danger') %>
</div>

<div class="col-12 col-md-10">
  <%= render('form', item: @item, sub_item: @sub_item) %>
</div>

<%= render('documents', sub_item: @sub_item) %>
