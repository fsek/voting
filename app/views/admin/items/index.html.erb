<div class="headline">
  <h1><%= t('.title') %></h1>
</div>
<div class="col-md-12">
  <%= link_to t('.new_item'), new_admin_item_path, class: 'btn primary' %>
  <% if can_administrate? :manage, Vote %>
    <%= link_to t('.manage_voting'), admin_votes_path, class: 'btn secondary' %>
  <% end %>
  <% if can_administrate? :manage_voting, User %>
    <%= link_to t('.manage_vote_users'), admin_vote_users_path, class: 'btn secondary' %>
  <% end %>
</div>
<div class="col-md-12">
  <table class="table table-striped table-bordered admin-grid">
    <thead>
      <tr>
        <th><%= Item.human_attribute_name(:title) %></th>
        <th><%= Item.human_attribute_name(:type) %></th>
        <th><%= t(:remove) %></th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
        <tr id="<%= dom_id(item) %>"
            class="<%= item.current? ? 'highlight' : 'no-highlight' %>">
          <td><%= link_to(item, edit_admin_item_path(item)) %></td>
          <td><%= item_type(item.type) %></td>
          <td>
            <%= link_to(t(:remove), admin_item_path(item),
                        method: :delete,
                        data: { confirm: t('.confirm_remove',
                                           title: item.title) }) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
