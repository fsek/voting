<div class="col-12">
  <div class="headline">
    <h1><%= title(t('.title')) %></h1>
  </div>
</div>

<div class="col-12 col-sm-2">
  <%= link_to(t('.all'), admin_users_path, class: 'btn primary') %>
</div>

<div class="col-12 col-sm-10 user">
  <%= simple_form_for([:admin, @user]) do |f| %>
    <%= f.input :firstname %>
    <%= f.input :lastname %>
    <%= f.input :role, collection: user_roles, include_blank: false %>
    <%= f.input(:card_number, input_html: {data: {mask: '9999-9999-9999-9999'},
                                           autocomplete: 'off'}) %>
    <%= f.button :submit %>
  <% end %>
</div>
