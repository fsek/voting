<div class="col-12">
  <div class="headline">
    <h1><%= t('.title') %></h1>
  </div>
</div>

<div class="col-12 col-sm-2">
  <div class="mb-2">
    <%= link_to(t('.all_news'), admin_news_index_path,
                                class: 'btn btn-secondary') %>
  </div>
  <div class="mb-2">
    <%= link_to(t('.destroy'), admin_news_path(@news),
                method: :delete,  class: 'btn btn-danger') %>
  </div>
</div>

<div class="col-12 col-sm-10">
  <%= render 'form', news: @news %>
</div>
