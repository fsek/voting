<%= simple_form_for [:admin, adjustment] do |f| %>
  <%= f.association :sub_item,
                    collection: SubItem.includes(:item),
                    label_method: :to_s, include_hidden: false,
                    include_blank: false,
                    input_html: { class: 'select2-single' } %>
  <%= f.input :presence, collection: adjustment_collection,
                         include_blank: false %>
  <%= f.hidden_field :user_id, value: adjustment.user_id %>
  <%= f.button :submit %>
<% end %>
