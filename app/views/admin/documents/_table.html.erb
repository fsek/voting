<table class="table table-striped table-bordered admin-grid">
  <thead>
    <tr>
      <th><%= t('.document_title') %></th>
      <th><%= t(:remove) %></th>
    </tr>
  </thead>
  <tbody>
    <% sub_item.documents.each do |doc| %>
     <% next unless doc.persisted? %>
      <tr>
        <td>
          <%= link_to(doc.filename, url_for(doc), target: :blank) %>
        </td>
        <td>
          <%= link_to(t(:remove), admin_sub_item_document_path(sub_item, doc),
                      method: :delete,
                      remote: true,
                      data: { confirm: t('.confirm_remove',
                                         title: doc.filename) }) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
