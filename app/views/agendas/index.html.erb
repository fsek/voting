<div class="headline">
  <h1><%= t('agenda.name') %></h1>
</div>

<div class="col-md-8 col-md-offset-2">
  <ul class="agenda list-group">
    <% @agendas.each do |agenda| %>
    <li class="<%= "list-group-item #{agenda.current_status}" %>">
      <h4 class="list-group-item-heading">
        <%= agenda_link(agenda) %>
      </h4>
      <span class="badge">
        <%= agenda_status_str(agenda.current_status) %>
      </span>
      <p class="list-group-item-text">
        <% if agenda.children.present? %>
          <% agenda.children.index.each do |a| %>
            <%= agenda_link(a) %>
            <br>
          <% end %>
        <% else %>
          <br>
        <% end %>
      </p>
    </li>
    <% end %>
  </ul>
</div>
