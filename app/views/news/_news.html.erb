<div class="mb-3 pb-3">
  <div class="headline">
    <h3><%= news.title %></h3>
  </div>

  <div>
    <% if news.user.present? %>
      <span class="link">
        <%= link_to(fa_icon('user', text: news.user), target: :blank) %>
      </span>
    <% end %>
    <span class="d-inline font-italic ml-2">
      <%= l(news.created_at) %>
    </span>
  </div>

  <div class="mb-2">
    <%= markdown(news.content) %>
  </div>


   <% if can_administrate?(:modify, news) %>
     <span class="edit">
       <%= link_to(edit_admin_news_path(news)) do %>
         <%= fa_icon('cog') %> <%= t(:edit) %>
       <% end %>
     </span>
   <% end %>
</div>
